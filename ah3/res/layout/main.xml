<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<FrameLayout
	    		android:id="@+id/framelayout"
	            android:layout_width="match_parent"
	            android:layout_height="0px"
	            android:layout_weight="1">
	
		<TextView 
		    android:layout_width="match_parent" 
		    android:layout_height="wrap_content" 
		    android:text="Hello, is it me you are looking for?"
		    android:layout_gravity="bottom" android:id="@+id/output" android:background="#ff000000"/>

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" android:layout_gravity="bottom">

			<ProgressBar
			    android:id="@+id/progressBar"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentRight="true"/>

		</RelativeLayout>

	</FrameLayout>

</LinearLayout>
